<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bubble="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.daxiang.customviews.view.BubbleImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/bubble_image_view1" />

        <com.daxiang.customviews.view.BubbleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/bubble_image_view1"
            bubble:arrowStartMargin="20dp" />

        <com.daxiang.customviews.view.BubbleImageView
            android:id="@+id/bubbleImageView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/bubble_image_view1" />

        <com.daxiang.customviews.view.BubbleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/bubble_image_view2"
            bubble:arrowHeight="10dp"
            bubble:arrowStartMargin="160dp"
            bubble:arrowWidth="30dp" />
    </LinearLayout>

</ScrollView>